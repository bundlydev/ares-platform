{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@app/*": ["./src/*"],
      "@app/components/*": ["./src/components/*"],
      "@app/context/*": ["./src/context/*"],
      "@app/declarations/*": ["./src/declarations/*"],
      "@app/hooks/*": ["./src/hooks/*"],
      "@app/lib/*": ["./src/lib/*"],
			"@app/ui/*": ["./@/components/ui/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "build/types/**/*.ts"],
  "exclude": ["node_modules"]
}
